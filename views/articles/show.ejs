<div class="mt-4 ms-2">
  <h1 class="display-3 fw-normal"><%= article.title %></h1>
  <div class="row">
    <div class="col-lg-8 align-self-center">
      <h4><%= article.description %></h4>
    </div>
    <div class="col-lg-4">
      <div class="row my-3">
        <div class="col d-grid">
          <a class="btn btn-lg btn-secondary" href="/"><i class="fa-solid fa-square-arrow-up-right btn-return"></i> | Go back</a>
        </div>
        <div class="col d-grid">
          <a class="btn btn-lg btn-info" href="/articles/edit/<%= article.id %>"><i class="fa-solid fa-pen"></i> | Edit</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="rounded-3 border p-4 bg-light">
  <%- article.sanitizedHTML %>
</div>
<div class="my-2">
  <h5 class="text-muted"><%= article.createdAt.toLocaleDateString() %></h5>
</div>
